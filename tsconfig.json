{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "strict": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      //      "ngx-mask": ["dist/ngx-mask-lib"],
      //      "ngx-mask/*": ["dist/ngx-mask-lib/*"]
      "ngx-mask": ["projects/ngx-mask-lib/src"],
      "ngx-mask/*": ["projects/ngx-mask-lib/src"]
    }
  }
}
